<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ziwow.scrmapp.common.persistence.mapper.RepairPartMapper">
    <resultMap id="BaseResultMap" type="com.ziwow.scrmapp.common.persistence.entity.RepairPart">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="partCode" property="partCode" jdbcType="VARCHAR"/>
        <result column="salePrice" property="salePrice" jdbcType="DECIMAL"/>
        <result column="settlePrice" property="settlePrice" jdbcType="DECIMAL"/>
        <result column="modelName" property="modelName" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
            id, name, partCode, salePrice, settlePrice, modelName
    </sql>

    <insert id="batchSave" parameterType="java.util.List">
        insert ignore into t_repair_part (id,name,partCode,salePrice,settlePrice,modelName) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id,jdbcType=BIGINT}, #{item.name,jdbcType=VARCHAR}, #{item.partCode,jdbcType=VARCHAR},
            #{item.salePrice,jdbcType=DECIMAL},
            #{item.settlePrice,jdbcType=DECIMAL}, #{item.modelName,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from t_repair_part where name like concat('%',#{name,jdbcType=VARCHAR},'%') and modelName =
        #{modelName,jdbcType=VARCHAR}
    </select>

    <select id="findByParts" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_repair_part where id in
        <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="findByModelName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from t_repair_part where modelName = #{modelName,jdbcType=VARCHAR}
    </select>

</mapper>