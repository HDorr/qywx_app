<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ziwow.scrmapp.common.persistence.mapper.RepairItemMapper">
    <resultMap id="BaseResultMap" type="com.ziwow.scrmapp.common.persistence.entity.RepairItem">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="itemCode" property="itemCode" jdbcType="VARCHAR"/>
        <result column="repairCode" property="repairCode" jdbcType="VARCHAR"/>
        <result column="typeName" property="typeName" jdbcType="VARCHAR"/>
        <result column="smallType" property="smallType" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
    id, name, itemCode, repairCode, typeName, smallType
    </sql>

    <insert id="batchSave" parameterType="java.util.List">
        insert ignore into t_repair_item (id,name,itemCode,repairCode,typeName,smallType) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id,jdbcType=BIGINT}, #{item.name,jdbcType=VARCHAR}, #{item.itemCode,jdbcType=VARCHAR}, #{item.repairCode,jdbcType=VARCHAR}
            , #{item.typeName,jdbcType=VARCHAR}, #{item.smallType,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from t_repair_item where name like concat('%',#{name,jdbcType=VARCHAR},'%')
        <choose>
            <when test="smallType!=null and smallType!=''">
                and smallType = #{smallType}
            </when>
            <otherwise>
                and typeName = #{typeName}
            </otherwise>
        </choose>

    </select>

    <select id="findByParts" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_repair_item where id in
        <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>